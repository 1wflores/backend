{
  "name": "amenity-reservation-backend",
  "version": "1.0.0",
  "description": "Amenity Reservation System Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "init-db": "node scripts/initDatabase.js",
    "prestart": "echo 'Starting Amenity Reservation API...'",
    "postinstall": "echo 'Dependencies installed successfully. Ready for Azure deployment.'",
    "azure:start": "./startup.sh",
    "health-check": "node -e \"console.log('Health check OK'); process.exit(0);\"",
    "validate": "node -c server.js && echo 'Syntax validation passed'"
  },
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.9.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "redis": "^4.6.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "api",
    "reservation",
    "amenity",
    "azure",
    "cosmos",
    "nodejs"
  ],
  "author": "Walter Flores",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/1wflores/backend"
  },
  "azure": {
    "node_version": "20.x",
    "startup_file": "server.js",
    "health_check_path": "/health"
  }
}